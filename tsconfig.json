{
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "sourceMap": true,
        "stripInternal": true,
        "target": "es5",
        "lib": ["es5", "dom", "es6", "es2015.promise", "esnext"],
        "baseUrl": "./src",
        "outDir": "./build",
        "paths": {
            "*": [
                "*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "fixtypings"
        ]
    },
    "include": [
        "src/**/*",
        "@types/app.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
